<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="edu.bsu.cs.GUIController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>


    <VBox spacing="5">
        <Label text="User 1" />
        <TextField fx:id="inputField1" promptText="Enter Steam Profile URL or ID" />
        <TextArea fx:id="outputField1" editable="false" prefHeight="400" prefWidth="350" promptText="Profile Data Appears Here" />
    </VBox>


    <VBox alignment="TOP_CENTER" spacing="8">
        <padding>
            <Insets top="100.0" />
        </padding>
        <Label text="Sort By" />
        <ComboBox fx:id="compareOptions" />
        <Label text="Games to Display" />
        <ComboBox fx:id="amountOfGames" />
        <Button defaultButton="true" onAction="#handleCompareAction" text="Compare" />
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
    </VBox>


    <VBox spacing="5">
        <Label text="User 2" />
        <TextField fx:id="inputField2" promptText="Enter Steam Profile URL or ID" />
        <TextArea fx:id="outputField2" editable="false" prefHeight="400" prefWidth="350" promptText="Profile Data Appears Here" />
    </VBox>
</HBox>
